<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffff99"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/spectacle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:text="Spectacle"
            style="@style/TextTitle"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3 " />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_16"
                android:paddingTop="@dimen/spacing_8"
                android:paddingRight="@dimen/spacing_16"
                android:paddingBottom="@dimen/spacing_8"
                android:drawableLeft="@drawable/baseline_place_black_24"
                android:drawablePadding="@dimen/spacing_8"
                style="@style/TextNormal"
                android:text="Lieu"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_16"
                android:paddingTop="@dimen/spacing_8"
                android:paddingRight="@dimen/spacing_16"
                android:paddingBottom="@dimen/spacing_8"
                android:drawableLeft="@drawable/baseline_calendar_today_black_24"
                android:drawablePadding="@dimen/spacing_8"
                style="@style/TextNormal"
                android:text="Date"/>

            <TextView
                android:id="@+id/heure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_16"
                android:paddingTop="@dimen/spacing_8"
                android:paddingRight="@dimen/spacing_16"
                android:paddingBottom="@dimen/spacing_8"
                android:drawableLeft="@drawable/baseline_alarm_black_24"
                android:drawablePadding="@dimen/spacing_8"
                style="@style/TextNormal"
                android:text="Heure"/>

            <TextView
                android:id="@+id/webLien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="@dimen/spacing_16"
                android:paddingTop="@dimen/spacing_8"
                android:paddingRight="@dimen/spacing_8"
                android:paddingBottom="@dimen/spacing_8"
                android:drawableLeft="@drawable/baseline_link_black_24"
                android:drawablePadding="@dimen/spacing_8"
                style="@style/TextNormal"
                android:text="Lien"
                android:textColor="#0000ff"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>