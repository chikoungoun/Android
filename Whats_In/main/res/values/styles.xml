<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeCollapse" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Text styles -->

    <style name="TextTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextNormal" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textItemTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="textItemNormal">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cardViewBackground">
        <item name="android:background">@android:color/background_light</item>
    </style>

</resources>
